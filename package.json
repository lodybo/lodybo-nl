{
  "name": "lodybo-blog",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "setup": "run-p docker link-fonts",
    "link-fonts": "run-p link-fonts:*",
    "link-fonts:normal": "ln node_modules/@fontsource/recursive/files/recursive-latin-variable-full-normal.woff2 app/assets/fonts/recursive",
    "docker": "npm run docker:start",
    "docker:start": "docker run -d --name lodybo-ghost -e NODE_ENV=development -e url=http://localhost:3001 -p 3001:2368 -v /Users/lodyborgers/dev/other/blog/ghost/content:/var/lib/ghost/content ghost:alpine",
    "docker:stop": "docker stop lodybo-ghost",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:css": "npm run generate:css -- --watch",
    "prebuild": "npm run generate:css",
    "build": "remix build",
    "start": "remix-serve build",
    "generate:css": "tailwindcss -m -i ./app/styles/app.css -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc --noEmit",
    "validate": "run-p lint typecheck"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fontsource/recursive": "^4.5.11",
    "@remix-run/node": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "@remix-run/serve": "^1.6.8",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^3.3.0",
    "tiny-invariant": "^1.2.0",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@tailwindcss/typography": "^0.5.4",
    "@tryghost/content-api": "^1.11.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/tryghost__content-api": "^1.3.11",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.20.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public",
    "/ghost"
  ]
}
